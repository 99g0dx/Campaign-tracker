# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Session
SESSION_SECRET=your-secret-key-here

# Email (Resend)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=Campaign Tracker <noreply@yourdomain.com>

# Scraping Configuration
# Primary provider: scrapecreators | apify
SCRAPING_PROVIDER=scrapecreators
SCRAPECREATORS_API_KEY=your_scrapecreators_api_key_here
APIFY_API_TOKEN=your_apify_token_here

# Scraping Performance Settings
SCRAPING_CONCURRENCY=5
SCRAPING_MAX_RETRIES=3
SCRAPING_RETRY_DELAY_MS=1000
SCRAPING_TIMEOUT_MS=30000

# App URL (for email links)
APP_URL=https://your-app-url.railway.app

# Server
PORT=5000
NODE_ENV=production
